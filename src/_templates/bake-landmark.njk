{% extends '_templates/base.njk' %}

{% set relative_path = "../" %}

{% block page_title %}{{ title }}{% endblock %}

{% block page_description %}{{ title }} by {{ author }}{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="col-sm-4">
          <img src="../img/{{ slug }}.jpg" alt="{{ title }}" class="img-fluid mb-4">
      </div>
      <div class="col-sm-8">
          <h1>{{ name }}</h1>
          <p>{{ established | safe }}</p>
          <p>{{ location | safe }}</p>
          <p>{{ activities | safe}}</p>
          <p>{{ description | safe }}</p>
          <p>{{ url | safe }}</p>
          
      </div>
    </div>
  </article>
{% endblock %}
